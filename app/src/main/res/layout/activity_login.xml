<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.outcube.cashsavior.LoginActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:src="@drawable/mock_logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CashSavior (mock logo)"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <com.facebook.widget.LoginButton
        android:id="@+id/facebook_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/facebook_login_btn"
        facebook:confirm_logout="false"
        facebook:fetch_user_info="true"/>
    <TextView
        android:id="@+id/facebook.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login with Facebook"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/main_activity_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Main Activity"/>

</LinearLayout>
