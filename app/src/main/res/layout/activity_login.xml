<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.outcube.cashsavior.LoginActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cashsavior_logo"/>
    <util.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your personal money companion"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <com.facebook.widget.LoginButton
        android:id="@+id/facebook_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/facebook_login_btn"
        android:padding="30dp"
        facebook:confirm_logout="false"
        facebook:fetch_user_info="true"
        android:text="Click to Login"/>
    <TextView
        android:id="@+id/facebook.tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/main_activity_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Enter"
        android:textSize="18sp"
        style="@style/Base.Theme.AppCompat.Light"/>

</LinearLayout>
